<div class="container" id="main-container">
  <div class="text-center" id="header">
    <div class="text-center">
      <h1>Repertoire des métiers de la ville de Paris et du département</h1>
    </div>
    <div class="mt-4">
      <h3>Nombre de métiers référencés: <%= Employment.all.count %> </h3>
      <div class="d-flex justify-content-around align-items-center text-center">
        <div id="import">
          <h4>Ajouter un archive csv</h4>
          <%= form_tag(import_employments_path, multipart: true) do %>
          <%= file_field_tag('file') %>
          <%= submit_tag("Importer CSV") %>
          <% end %>
        </div>
        <div class="d-flex justify-content-between">
          <%= link_to 'enrichir', enrich_all_employments_path, method: :patch  %>
          <%= link_to "supprimer", destroy_all_employments_path, method: :delete  %>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-3" id="tableau">
    <table>
      <%= render partial: 'shared/table_header' %>
      <tbody>
        <% @employments.each do |employment| %>
        <%= render partial: 'shared/table_body', object: employment, as: 'item' %>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center align-items-center text-center">
      <%= paginate @employments %>
    </div>
  </div>
</div>
